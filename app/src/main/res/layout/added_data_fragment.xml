<?xml version="1.0" encoding="utf-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/added_data_fragment"
    android:layout_height="match_parent"
    android:background="@color/customwhite"
    tools:context=".Adddatatotemplate">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <TextView
                android:id="@+id/BIO_TEXT_"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="30sp"
                android:inputType="textMultiLine"
                android:text="BIO" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/template_image"
                android:layout_width="130dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:gravity="center"
                app:shapeAppearanceOverlay="@style/Circular"
                app:srcCompat="@drawable/button_style"
                tools:layout_editor_absoluteY="365dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp"
                android:orientation="vertical"
                android:padding="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textView4"
                    style="@android:style/Widget.TextView.PopupMenu"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:padding="7dp"
                    android:text="@string/name_"
                    android:textAlignment="gravity"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="4">
                    <TextView
                        android:id="@+id/name_"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/first_name"
                        android:layout_weight="2"
                        android:inputType="textPersonName"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/entered_name_"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/first_name"
                        android:layout_weight="2"
                        android:inputType="textPersonName"
                        android:textSize="16sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="4">
                    <TextView
                        android:id="@+id/height_"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="@string/height"
                        android:layout_weight="2"
                        android:inputType="textPersonName"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/entered_height_"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/religion"
                        android:layout_weight="2"
                        android:inputType="textPersonName"
                        android:textSize="16sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="4">
                    <TextView
                        android:id="@+id/religion_"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autofillHints="Name"
                        android:hint="@string/religion"
                        android:layout_weight="2"
                        android:inputType="textPersonName"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/entered_religion_"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/religion"
                        android:layout_weight="2"
                        android:inputType="textPersonName"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="4">
                    <TextView
                        android:id="@+id/lang_"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autofillHints="Name"

                        android:hint="@string/language"
                        android:layout_weight="2"
                        android:inputType="textPersonName"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/entered_lang_"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/religion"
                        android:layout_weight="2"
                        android:inputType="textPersonName"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="4">
                    <TextView
                        android:id="@+id/birthdate_"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="BirthDate"
                        android:inputType="date"
                        android:layout_weight="2"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/entered_birthdate_"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/religion"
                        android:layout_weight="2"
                        android:inputType="textPersonName"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="4">
                    <TextView
                        android:id="@+id/birthplace_"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/birthplace"
                        android:inputType="time"
                        android:layout_weight="2"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/entered_birthplace_"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/religion"
                        android:layout_weight="2"
                        android:inputType="textPersonName"
                        android:textSize="16sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="4">
                    <TextView
                        android:id="@+id/occupation_"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="@string/occupation"
                        android:layout_weight="2"
                        android:inputType="textPersonName"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/entered_occupation_"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/religion"
                        android:layout_weight="2"
                        android:inputType="textPersonName"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="4">
                    <TextView
                        android:id="@+id/education_"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="@string/education"
                        android:layout_weight="2"
                        android:inputType="textPersonName"
                        android:textSize="16sp" />


                    <TextView
                        android:id="@+id/entered_education_"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/religion"
                        android:layout_weight="2"
                        android:inputType="textPersonName"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="4">
                    <TextView
                        android:id="@+id/other_"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:layout_weight="2"
                        android:enabled="false"
                        android:hint="@string/others"
                        android:inputType="textPersonName" />

                    <TextView
                        android:id="@+id/entered_other_"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/religion"
                        android:layout_weight="2"
                        android:inputType="textPersonName"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="4">
                    <TextView
                        android:id="@+id/father_name_"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:hint="@string/father_name"
                        android:inputType="textPersonName"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/entered_father_name_"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/religion"
                        android:layout_weight="2"
                        android:inputType="textPersonName"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="4">
                    <TextView
                        android:id="@+id/father_occupation_"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:hint="@string/father_occupation"
                        android:inputType="textPersonName"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/entered_father_occupation_"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/religion"
                        android:layout_weight="2"
                        android:inputType="textPersonName"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="4">
                    <TextView
                        android:id="@+id/contact_"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:hint="@string/contact_no"
                        android:inputType="phone"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/entered_contact_"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/religion"
                        android:layout_weight="2"
                        android:inputType="textPersonName"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="4">
                    <TextView
                        android:id="@+id/mother_name_"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:hint="@string/mother_name"
                        android:inputType="textPersonName"

                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/entered_mother_name_"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/religion"
                        android:layout_weight="2"
                        android:inputType="textPersonName"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="4">

                    <TextView
                        android:id="@+id/no_of_sister_"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:hint="@string/number_of_sister"
                        android:inputType="textPersonName"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/entered_no_of_sister_"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/religion"
                        android:layout_weight="2"
                        android:inputType="textPersonName"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="4">
                    <TextView
                        android:id="@+id/full_address_"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/full_address"
                        android:layout_weight="2"
                        android:inputType="textPersonName"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/entered_full_address_"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/religion"
                        android:layout_weight="2"
                        android:inputType="textPersonName"
                        android:textSize="16sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/template_data_show_next"
                    android:background="@android:color/holo_red_light"
                    android:foregroundGravity="center"
                    android:textColor="@color/customwhite"
                    android:layout_margin="10dp"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Next">
                </Button>
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
